# Este arquivo contém as variáveis de ambiente e configurações para orquestração independente

# Configuração do Docker Hub
DOCKERHUB_USERNAME=seu-usuario-dockerhub
DOCKER_IMAGE_NAME=nome-da-sua-aplicacao
IMAGE_TAG=latest

# Configuração da Aplicação
APP_PORT=3000
CONTAINER_NAME=nome-da-sua-aplicacao
NODE_ENV=production

# Configuração de Verificação de Saúde
HEALTH_CHECK_TIMEOUT=60
HEALTH_CHECK_INTERVAL=5

# Configuração de Deploy
DEPLOYMENT_STRATEGY=rolling  # rolling, blue-green, canary
REPLICAS=1

# Configuração de Monitoramento
ENABLE_MONITORING=true
METRICS_PORT=9090

# Configuração de Logs
LOG_LEVEL=info
LOG_FORMAT=json

# Configuração de Segurança
ENABLE_SECURITY_SCANNING=true
SCAN_ON_BUILD=true

# Configuração de Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Diariamente às 2h da manhã
